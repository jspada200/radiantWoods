<style>
  /* Logo Placement and Size Adjustments */
  .header__heading-logo-wrapper {
    max-width: 800px;
  }
  .header__heading-logo {
    max-width: 100%;
    height: auto;
  }

  /* Menu Style Changes */
  .navigation {
    display: flex;
    justify-content: flex-end;
    gap: 32px;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .navigation a {
    font-family: 'Open Sans', sans-serif;
    font-optical-sizing: auto;
    font-weight: 700;
    font-style: bold;
    color: #5a5a5a;
    text-decoration: none;
    font-size: 24px;
  }
  .navigation a:hover {
    color: #a67a53; /* Accent color */
  }

  /* Sticky Header Behavior */
  .sticky-header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: #fff;
    border-bottom: 1px solid #eaeaea;
  }

  /* Social Icons */
  .social-icons {
    display: flex;
    gap: 10px;
    justify-content: center;
  }
  .social-icons a {
    font-size: 18px;
    color: #5a5a5a;
  }
  .social-icons a:hover {
    color: #a67a53;
  }

  /* Color Scheme Adjustments */
  .header {
    background-color: #f9f9f9;
    color: #333;
    margin: 20px 0 20px 0;
    display: flex;
    justify-content: space-between;
    width: 50%;
    margin: 20px auto;
  }

  /* Mobile Responsiveness Tweaks */
  @media (max-width: 768px) {
    .navigation {
      flex-direction: column;
      gap: 10px;
    }
    .header__heading-logo-wrapper {
      margin-bottom: 10px;
    }
  }
</style>

<script>
  /* Enhance Sticky Header Behavior */
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('.header');
    const sticky = header.offsetTop;

    window.addEventListener('scroll', () => {
      if (window.pageYOffset > sticky) {
        header.classList.add('sticky-header');
      } else {
        header.classList.remove('sticky-header');
      }
    });
  });
</script>

<header class="header">
  <div class="header__heading-logo-wrapper">
    <a href="/">
      <img
        src="{{ 'topLogo.png' | asset_url }}"
        alt="{{ shop.name }}"
        class="header__heading-logo"
        width="450px"
        height="150px"
      >
    </a>
  </div>
  <nav>
    <ul class="navigation">
      {% for link in linklists['main-menu'].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
  {% comment %}
    <div class="social-icons">
      <a href="{{ settings.social_facebook_link }}" target="_blank">FB</a>
      <a href="{{ settings.social_instagram_link }}" target="_blank">IG</a>
      <a href="{{ settings.social_twitter_link }}" target="_blank">TW</a>
    </div>
  {% endcomment %}
</header>
